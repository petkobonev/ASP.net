@using CarsAplication.Models
@using CarsAplication.Helpers
@model List<BrandViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h4>Brand</h4>
    <hr />
    <table class="table table-striped">

        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Category</th>
                <th></th>
                <th></th>
            </tr>

        </thead>

        <tbody>

            @foreach (BrandViewModel brand in Model)
            {
                <tr>
                    <td>@brand.ID</td>
                    <td>@brand.Name</td>
                    <td>@brand.Country</td>

                    @if (LoginSession.Current.IsAuthenticated)
                    {
                        <td>@Html.ActionLink("Edit", "Edit", "Brand", new { id = brand.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Brand", new { id = brand.ID }, new { onclick = "return confirm('Are you sure you want to delete this brand?');", @class = "btn btn-danger btn-sm" })</td>
                    }

                </tr>
            }

        </tbody>
        @if (LoginSession.Current.IsAuthenticated)
        {
            @Html.ActionLink("Create", "Create", "Brand", null, new { @class = "btn btn-success btn-sm" })
        }

    </table>

</div>

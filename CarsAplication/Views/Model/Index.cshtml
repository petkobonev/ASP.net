@using CarsAplication.Models
@using CarsAplication.Helpers
@model List<ModelViewModel>

@{
    ViewBag.Title = "Index";
}

<h2>Index</h2>

<div>
    <h4>Model</h4>
    <hr />
    <table class="table table-striped">

        <thead>
            <tr>
                <th>ID</th>
                <th>Name</th>
                <th>Brand</th>
                <th></th>
                <th></th>
            </tr>

        </thead>

        <tbody>

            @foreach (ModelViewModel modelView in Model)
            {
                <tr>
                    <td>@modelView.ID</td>
                    <td>@modelView.Name</td>
                    <td>@modelView.Brand.Name</td>

                    @if (LoginSession.Current.IsAuthenticated)
                    {
                        <td>@Html.ActionLink("Edit", "Edit", "Model", new { id = modelView.ID }, new { @class = "btn btn-primary btn-sm" })</td>
                        <td>@Html.ActionLink("Delete", "Delete", "Model", new { id = modelView.ID }, new { onclick = "return confirm('Are you sure you want to delete this model?');", @class = "btn btn-danger btn-sm" })</td>
                    }

                </tr>
            }

        </tbody>
        @if (LoginSession.Current.IsAuthenticated)
        {
            @Html.ActionLink("Create", "Create", "Model", null, new { @class = "btn btn-success btn-sm" })
        }

    </table>

</div>

